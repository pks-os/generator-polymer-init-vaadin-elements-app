{
  "entrypoint": "index.html",
  "shell": "src/<%= elementName %>.html",
  "fragments": [
    "src/employee-list.html",
    "src/employee-sales.html",
    "src/employee-404.html"
  ],
  "sources": [
   "src/**/*",
   "images/**/*",
   "bower.json"
  ],
  "extraDependencies": [
    "manifest.json",
    "bower_components/webcomponentsjs/*.js",
    "!bower_components/webcomponentsjs/gulpfile.js",
    "bower_components/vaadin-lumo-styles/*.html",
    "employees.json"
  ],
  "lint": {
    "rules": ["polymer-2"]
  },
  "builds": [
    {
      "preset": "es5-bundled"
    },
    {
      "preset": "es6-bundled"
    },
    {
      "preset": "es6-unbundled"
    }
  ]
}
